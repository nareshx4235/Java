package com.studystd.conditonals;

import java.util.Scanner;

public class TerneryOperatorss {
	public static void main (String[] args) {
		int age;
		Scanner sc  = new Scanner(System.in);
		System.out.println ("Enter your aage:");
		age =sc.nextInt ();
		String msg = (age<18)? "You are a kid , let me get you a chocolate "
				:(age<60)?"You are an adult"
						:"You are a senior citizen";
		
	
	
System.out.println(msg); // used to print the message acc to the condition

}
}
