
//  Triangle :


		System.out.println("Triangle :");
		for(i=0;i<5;i++) {
			for (j=0;j<5-i;j++) {
				System.out.print("* ");
			
		}
			System.out.println();
		
	}

	}
  
OUTPUT-----  Triangle :--------
* * * * * 
* * * * 
* * * 
* * 
* 

